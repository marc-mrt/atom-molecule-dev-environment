{
  "name": "molecule-dev-environment",
  "main": "./build/babel/molecule-dev-environment.js",
  "version": "0.4.0",
  "description": "Molecule IDE for Atom.io",
  "keywords": [
    "ide",
    "molecule",
    "atom"
  ],
  "scripts": {
    "eslint": "BABEL_ENV=process eslint lib/",
    "flow": "flow check --show-all-errors",
    "jest:watch": "jest --watch",
    "storybook": "start-storybook -p 9001 -c .storybook -s ./.storybook/public/",
    "test": "jest && npm run eslint",
    "update": "git checkout v0.4.0 && rm -rf node_modules && yarn",
    "babel:build": "babel lib --out-dir ./build/babel/",
    "babel:watch": "babel lib --out-dir ./build/babel/ --watch",
    "postinstall": "npm run babel:build"
  },
  "repository": "https://github.com/alanzanattadev/atom-molecule-dev-environment",
  "license": "MIT",
  "engines": {
    "atom": ">=1.17.0 <2.0.0"
  },
  "package-deps": [
    "linter"
  ],
  "consumedServices": {
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeIndie"
      }
    }
  },
  "dependencies": {
    "ansi-to-html": "^0.6.3",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-do-expressions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-register": "^6.26.0",
    "classnames": "^2.2.5",
    "color-hash": "^1.0.3",
    "fb-watchman": "^2.0.0",
    "flow-language-server": "^0.2.5",
    "flowtype": "^2.0.0",
    "immutable": "^3.8.1",
    "inline-style-prefixer": "^3.0.8",
    "jest-cli": "^21.2.1",
    "less": "^2.7.3",
    "moment": "^2.19.2",
    "nightwatch": "^0.9.12",
    "nightwatch-html-reporter": "^2.0.0",
    "nuclide-prebuilt-libs": "^0.2.0",
    "radium": "^0.19.1",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.4.2",
    "react-forms-state": "alanzanattadev/react-forms-state",
    "react-image-fallback": "^5.0.0",
    "react-motion": "^0.5.1",
    "react-redux": "^5.0.6",
    "recompose": "^0.25.1",
    "redux": "^3.6.0",
    "redux-observable": "^0.14.1",
    "redux-thunk": "^2.1.0",
    "remote-redux-devtools": "^0.5.7",
    "rxjs": "^5.4.3",
    "ssh2": "^0.5.4",
    "stream-buffers": "^3.0.1",
    "styled-components": "^2.2.0",
    "tree-kill": "^1.2.0",
    "vscode-jsonrpc": "^3.5.0",
    "vscode-uri": "^1.0.1",
    "xterm": "^2.9.2"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.18.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.23.0",
    "enzyme": "^2.7.1",
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.59.0",
    "flow-typed": "^2.2.3",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "redux-mock-store": "^1.3.0",
    "webpack": "^3.10.0"
  },
  "jest": {
    "moduleNameMapper": {
      "electron": "<rootDir>/lib/ExecutionControlEpic/PlanConfigurationFeature/Fake/fakeElectron.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "flowtype",
      "prettier",
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:flowtype/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/flowtype",
      "prettier/react"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "helperAPI|taskAPI|dirname"
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "all"
        }
      ],
      "react/no-find-dom-node": "warn"
    }
  }
}
